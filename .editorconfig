root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{js,json}]
charset = utf-8
indent_style = space
indent_size = 2
indent_brace_style = K&R
curly_bracket_next_line = false

[*.{js}]
quote_type = single
spaces_around_operators = true
spaces_around_brackets = inside

[*.py]
indent_style = space
indent_size = 4
